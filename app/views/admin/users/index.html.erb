<h1>Users</h1>

<%= paginate @users %>

<%= link_to "Create a new user.", new_admin_user_path %>


<table style="width:60%">
  <tr>
    <th>Fullname</th>
    <th>Email</th>
    <th>Created Date</th>
    <th>Admin?</th>
    <th>Edit User</th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.created_at %></td>
      <td><%= user.is_admin %></td>
      <td><%= link_to "edit", edit_admin_user_path(user) %></td>
    </tr>
  <% end %>

</table>
<br>