<footer>
  <small>
    <% if current_user && current_user.is_admin?%>
      Signed in as <%= current_user.full_name%> - <%= link_to "Visit your user profile page", user_path(session[:user_id]) %> or <%= link_to "Admin User Management", admin_users_path%> (<%= link_to "Log out", session_path("current"), method: :delete %>)
    <% elsif current_user%>
      Signed in as <%= current_user.full_name%> - <%= link_to "Visit your user profile page", user_path(session[:user_id]) %> (<%= link_to "Log out", session_path("current"), method: :delete %>)
    <% else %>
      <%= link_to "Log In", new_session_path %> | <%= link_to "Sign Up", new_user_path %>
    <% end %>
  </small>
</footer>