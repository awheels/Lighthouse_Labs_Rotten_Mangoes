<div class = "profile-main-box">
  <h3>Hello <%= @user.full_name %> 
  <% if @user.is_admin %>
    (Admin)
  <% end %></h3>
 
  <table style = "width:50%" >  
    <tr>
      <td>  Email </td>
      <td>  <%= @user.email %> </td>
    </tr>
    <tr>
      <td>  Joined on </td>
      <td>  <%= @user.created_at %> </td>
    </tr>
  </table>
  <br>
  <h4>List of movies reviewed by <%= @user.full_name %></h4>
  <% @user.reviews.each do |review| %>
    <p>Title: <%= link_to Movie.find(review.movie_id).title, movie_path(review.movie_id)%> | Average Review: <%= Movie.find(review.movie_id).review_average%></p>
    <p><%= review.text %></p>
    <br>
  <% end %>
</div>

