<div class = "container">
  <div class = "row movie-index-box">
      <% @movies.each do |movie| %> 
          <%=render partial: 'movie', locals: {movie: movie} %>
      <% end %>
    </div>
  </div>
</div>

  <div class="col-md-6 col-md-offset-3 search-box" id = "fixed-box">
    <% search_params = params[:search] || {} %>

    <%= form_tag movies_path, method: :get, :class =>'form-inline' do %>
      
      <%= text_field_tag 'search[q]', search_params[:q], placeholder: "Title or Director", class: 'form-control'%>
      

      <%= select_tag("search[duration]", options_for_select([["Any duration", 0],["Under 90 minutes", 1],["Between 90 and 120 minutes",'2'],["Over 120 minutes", 3]]), class: 'form-control',:prompt => "Duration") %>

      <%= select_tag("search[sort]", options_for_select([["Average Rating","1"],["Title","2"],["Newest", "3"]]), class: 'form-control', :prompt => "Sort by") %>

      <%= submit_tag "Search", class: "btn btn-default"%>
    <% end %>
  </div>
