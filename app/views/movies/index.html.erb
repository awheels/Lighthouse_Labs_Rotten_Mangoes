<h1>Rotten Mangoes</h1>
<%= link_to "Submit a movie!", new_movie_path %>


<%= link_to "Average Rating", movies_path(sort: "averagerating") %>
<%= link_to "Title", movies_path(sort: "title") %>
<%= link_to "Newest", movies_path(sort: "newest") %>

<%= form_tag("/movies", method: "get") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Title or Director"%>
  <%= select_tag(:duration, options_for_select([["Under 90 minutes", 1],["Between 90 and 120 minutes",2],["Over 120 minutes", 3]]), include_blank: true) %>
  <%= submit_tag("Search") %>
<% end %>


<hr>
<% @movies.each do |movie| %>
  <%=render partial: 'movie', locals: {movie: movie} %>
<% end %>